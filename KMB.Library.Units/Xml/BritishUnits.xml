<?xml version="1.0" encoding="utf-8" ?>
<units name="British">
	<!--
       acre-foot	ac ft	43,560 cubic feet, or 1,613 cubic yards	1,233 cubic metres
       board foot	bd ft	144 cubic inches, or 1/12 cubic foot	2.36 litresToCubicMetres
       cord	cd	128 cubic feet	3.62 cubic metres
       bushel	bu	4 pecks	0.036 cubic metre
       peck	pk	2 gallons	0.0091 cubic metre
       gill	gi	5 fluid ounces	142.066 cubic centimetres
       minim	min	1/60 fluid dram	0.059194 cubic centimetre
    -->
	<constant name="poundsToKilogrammes" value="0.45359237" />
	<constant name="feetToMetres" value="0.3048" />
	<constant name="squareFeetToSquareMetres" value="(feetToMetres * feetToMetres)" />
	<constant name="cubicFeetToCubicMetres" value="(feetToMetres * feetToMetres * feetToMetres)" />
	<constant name="litresToCubicMetres" value="0.001" />

	<!-- Mass -->
	<unit name="LongTons" shortname="ton" dimension="Mass" factor="poundsToKilogrammes*2240.0" display="Multi" />
	<unit name="HundredWeight" shortname="cwt" dimension="Mass" factor="poundsToKilogrammes*112.0"  display="Multi" />
	<unit name="Stones" shortname="st" dimension="Mass" factor="poundsToKilogrammes*14.0" display="Multi" />
	<unit name="Pounds" shortname="lb" dimension="Mass" factor="poundsToKilogrammes" display="Standard" />
	<unit name="Ounces" shortname="oz" dimension="Mass" factor="poundsToKilogrammes/16.0" display="Multi" />
	<unit name="Dram" shortname="dr" dimension="Mass" factor="0.00177185" display="Explicit" />
	<unit name="Grain" shortname="gr" dimension="Mass" factor="6.47989e-5" display="Explicit" />

	<!-- Length -->
	<unit name="Miles" shortname="mi" dimension="Length" factor="(feetToMetres*5280.0)" display="Multi" />
	<unit name="Yards" shortname="yd" dimension="Length" factor="(feetToMetres*3.0)" display="Multi" />
	<unit name="Feet"  shortname="ft" dimension="Length" factor="feetToMetres" display="Standard" />
	<unit name="Inches" shortname="in" dimension="Length" factor="(feetToMetres/12.0)" display="Multi" />
	<unit name="NauticalMiles" shortname="nmi" dimension="Length" factor="1852" display="Explicit" />
	<unit name="Furlongs" shortname="fur" dimension="Length" factor="201.168" display="Explicit" />
	<unit name="Rods" shortname="rd" dimension="Length" factor="5.029" display="Explicit" />
	<unit name="Fathoms" shortname="fth" dimension="Length" factor="1.8288" display="Explicit" />

	<!-- Time -->
	<unit name="Fortnights" shortname="fn" dimension="Time" factor="3600.0*24.0*14.0" display="Explicit" />

	<!-- Area -->
	<unit name="SquareFeet" shortname="ft²" dimension="Area" factor="squareFeetToSquareMetres" display="Standard" />
	<unit name="SquareMiles" shortname="mi²" dimension="Area" factor="2.788e+7*squareFeetToSquareMetres" display="Multi" />
	<unit name="Acres" shortname="acre" dimension="Area" factor="43560*squareFeetToSquareMetres" display="Multi" />
	<unit name="SquareYards" shortname="yd²" dimension="Area" factor="9*squareFeetToSquareMetres" display="Explicit" />
	<unit name="SquareInch" shortname="in²" dimension="Area" factor="0.0069*squareFeetToSquareMetres" display="Explicit" />
	<unit name="SquareRod" shortname="in²" dimension="Area" factor="272.25*squareFeetToSquareMetres" display="Explicit" />

	<!-- Volume -->
	<unit name="CubicFeet" shortname="ft³" dimension="Volume" factor="cubicFeetToCubicMetres" display="Standard" />
	<unit name="CubicYards" shortname="yd³" dimension="Volume" factor="27*cubicFeetToCubicMetres" display="Standard" />
	<unit name="CubicInches" shortname="in³" dimension="Volume" factor="0.00058*cubicFeetToCubicMetres" display="Multi" />

	<!--  British liquid and dry measures -->
	<unit name="Gallons" shortname="gal" dimension="Volume" factor="4.54609*litresToCubicMetres" display="Multi" />
	<unit name="Quarts" shortname="qt" dimension="Volume" factor="1.136*litresToCubicMetres" display="Multi" />
	<unit name="Pints" shortname="pt" dimension="Volume" factor="0.568261*litresToCubicMetres" display="Multi" />
	<unit name="FluidOunces" shortname="floz" dimension="Volume" factor="0.0284131*litresToCubicMetres" display="Explicit" />
	<unit name="FluidDrams" shortname="fldr" dimension="Volume" factor="0.00355163*litresToCubicMetres" display="Explicit" />

	<unit name="DegreesFahrenheit" shortname="°F" dimension="TemperatureChange" factor="5.0/9.0" display="Standard" />

	<unit name="MilesPerHour" shortname="mph" dimension="Velocity" factor="1.0/2.23694" display="Explicit" />
</units>